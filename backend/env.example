# Server Configuration
PORT=5000

# API Security
API_KEY=your_super_secret_api_key_here

# Database Configuration
MONGO_URI=mongodb://localhost:27017/pcsi_db

# JWT Configuration
JWT_ACCESS_SECRET=your_super_secret_access_token_key_here
JWT_REFRESH_SECRET=your_super_secret_refresh_token_key_here
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Email Configuration (for email verification and password reset)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Client Configuration
CLIENT_URL=http://localhost:3000
# Multiple client URLs (comma-separated)
CLIENT_URLS=http://localhost:3000,http://localhost:5173,https://your-frontend-domain.com

# Environment
NODE_ENV=development
